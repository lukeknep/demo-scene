    "topicFilters": [                  \
        {                              \
            "name": "*",               \
            "patternType": "LITERAL",  \
            "filterType": "INCLUDE"    \
        }                              \
    ]                                  \
}

# sync all consumer offsets
consumer.offset.sync.enable=true
consumer.offset.group.filters={        \
    "groupFilters": [                  \ 
        {                              \
            "name": "*",               \
            "patternType": "LITERAL",  \
            "filterType": "INCLUDE"    \
        }                              \
    ]                                  \
}
consumer.offset.sync.ms=1000
# ^ optional, lowering timeout for demo purposes


# sync all ACLs (in case we change any while failed over)
acl.sync.enable=true
